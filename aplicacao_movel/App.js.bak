import React from 'react';
import { NavigationContainer } from '@react-navigation/native';
import { createNativeStackNavigator } from '@react-navigation/native-stack'; // Alterado para createNativeStackNavigator

// Importa suas telas
import RegisterScreen from './screens/RegisterScreen';
import LoginScreen from './screens/LoginScreen';
import HomeScreen from './screens/HomeScreen';
import FacialRecognitionScreen from './screens/FacialRecognitionScreen';
import ConfirmPresenceScreen from './screens/ConfirmPresenceScreen';
import CourseAttendanceScreen from './screens/CourseAttendanceScreen';
import CoursesAndSchedulesScreen from './screens/CoursesAndSchedulesScreen';

const Stack = createNativeStackNavigator(); // Alterado para createNativeStackNavigator

export default function App() {
  return (
    <NavigationContainer>
      <Stack.Navigator initialRouteName="Login">
        
        {/* TELA DE REGISTRO */}
        <Stack.Screen
          name="RegisterScreen"
          component={RegisterScreen}
          options={{ title: 'Criar Conta' }}
        />
        
        <Stack.Screen
          name="Login"
          component={LoginScreen}
          options={{ title: 'Login' }}
        />
        <Stack.Screen
          name="Home"
          component={HomeScreen}
          options={{ title: 'Início' }}
        />
        <Stack.Screen
          name="FacialRecognition"
          component={FacialRecognitionScreen}
          options={{ title: 'Reconhecimento Facial' }}
        />
        <Stack.Screen
          name="ConfirmPresence"
          component={ConfirmPresenceScreen}
          options={{ title: 'Confirmar Presença' }}
        />
        <Stack.Screen
          name="CourseAttendance"
          component={CourseAttendanceScreen}
          options={{ title: 'Frequência' }}
        />
        <Stack.Screen
          name="Courses"
          component={CoursesAndSchedulesScreen}
          options={{ title: 'Minhas Disciplinas' }}
        />
      </Stack.Navigator>
    </NavigationContainer>
  );
}